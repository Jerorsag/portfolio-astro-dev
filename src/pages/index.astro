---
import Layout from '../layouts/Layout.astro';
import DynamicBlockRenderer from '../components/blocks/DynamicBlockRenderer.astro';
import { getLandingPageData } from '../services/landing-page';

let landingPageData;
let error = null;

try {
  landingPageData = await getLandingPageData();
  console.log('üéØ Landing page data loaded successfully', {
    totalBlocks: landingPageData.attributes.blocks.length,
    blockTypes: landingPageData.attributes.blocks.map(block => block.__component)
  });
} catch (err) {
  error = err;
  console.error('‚ùå Failed to load landing page data:', err);
}

// Extraer datos para el Layout
const pageTitle = landingPageData?.attributes.title || "Mi Portafolio";
const pageDescription = landingPageData?.attributes.description || "Portafolio personal";
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
>
  {error ? (
    <div class="min-h-screen flex items-center justify-center bg-gray-50">
      <div class="text-center p-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-4">
          Error al cargar la p√°gina
        </h1>
        <p class="text-gray-600 mb-4">
          No se pudo cargar el contenido. Por favor, intenta m√°s tarde.
        </p>
        <div class="text-sm text-gray-500">
          {error?.message || 'Error desconocido'}
        </div>
      </div>
    </div>
  ) : landingPageData?.attributes.blocks ? (
    <main>
      <!-- Renderizar bloques din√°micos -->
      <DynamicBlockRenderer blocks={landingPageData.attributes.blocks} />
    </main>
  ) : (
    <div class="min-h-screen flex items-center justify-center bg-gray-50">
      <div class="text-center">
        <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-blue-600 mx-auto mb-4"></div>
        <p class="text-gray-600">Cargando contenido...</p>
      </div>
    </div>
  )}
</Layout>