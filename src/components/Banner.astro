---
import type { Banner } from '../types/global';

interface Props {
  banner: Banner;
}

const { banner } = Astro.props;
---

{banner.isVisible && (
  <div class="relative bg-gradient-to-r from-slate-900 via-blue-900 to-slate-900 text-white overflow-hidden">
    <!-- Efectos de fondo -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(59,130,246,0.1),transparent_70%)]"></div>
    <div class="absolute inset-0 bg-[linear-gradient(45deg,transparent_30%,rgba(255,255,255,0.02)_50%,transparent_70%)]"></div>
    
    <!-- Contenido principal -->
    <div class="relative px-4 py-3 max-w-7xl mx-auto">
      <div class="flex items-center justify-center gap-4 flex-wrap sm:flex-nowrap">
        <!-- Texto principal -->
        <p class="text-sm sm:text-base font-medium text-slate-100 whitespace-nowrap sm:whitespace-normal">
          {banner.description}
        </p>
        
        <!-- Separador visual sutil -->
        <div class="hidden sm:block w-px h-4 bg-slate-400/30"></div>
        
        <!-- Link con ícono -->
        <a
          href={banner.link.href}
          target={banner.link.isExternal ? '_blank' : '_self'}
          rel={banner.link.isExternal ? 'noopener noreferrer' : undefined}
          class="group inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm text-white px-4 py-1.5 rounded-full border border-white/20 hover:bg-white/20 hover:border-white/30 transition-all duration-300 ease-out hover:scale-105 hover:shadow-lg hover:shadow-blue-500/25 text-sm font-medium whitespace-nowrap"
        >
          <span>{banner.link.label}</span>
          <!-- Ícono de enlace externo -->
          {banner.link.isExternal && (
            <svg 
              class="w-3.5 h-3.5 opacity-70 group-hover:opacity-100 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all duration-300" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          )}
        </a>
      </div>
    </div>
    
    <!-- Línea de acento inferior -->
    <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-blue-400/50 to-transparent"></div>
  </div>
)}

<style>
  /* Animación sutil para el fondo */
  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
  
  .group:hover::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    animation: shimmer 0.6s ease-out;
  }
</style>